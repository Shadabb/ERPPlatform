@page "/log-analytics/data-seeder"
@model ERPPlatform.Web.Pages.LogAnalytics.DataSeederModel
@{
    ViewData["Title"] = "ApplicationLog Data Seeder";
}

<div class="container">
    <h2>ApplicationLog Data Seeder</h2>
    <p>Use this page to seed dummy ApplicationLog data for testing the Serilog dashboard.</p>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>Seed New Data</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-page-handler="SeedData">
                        <div class="form-group">
                            <label>Number of records:</label>
                            <input type="number" name="count" value="20" min="1" max="100" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-primary">Seed Data</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>Clear Data</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-page-handler="ClearData">
                        <p>This will clear all dummy ApplicationLog records.</p>
                        <button type="submit" class="btn btn-danger">Clear All Data</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-info mt-3">
            @Model.Message
        </div>
    }

    <div class="mt-4">
        <a href="/log-analytics/serilog-dashboard" class="btn btn-success">View Serilog Dashboard</a>
    </div>
</div>